<UserControl x:Class="Positioner.View.UserControls.TemplateTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Positioner.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="821">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" 
                  x:Name="TemplateDataGrid" 
                  AutoGenerateColumns="False"
                  SelectionUnit="FullRow"
                  SelectionMode="Single"
                  SelectionChanged="TemplateDataGrid_SelectionChanged"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Created" Binding="{Binding CreatedTimestamp}" />
                <DataGridTextColumn Header="Updated" Binding="{Binding UpdatedTimestamp}" />
            </DataGrid.Columns>
        </DataGrid>


        <Button Grid.Row="1" 
                Name="TemplateUseBtn"
                Click="TemplateUseBtn_Click" 
                Content="Use" 
                Margin="34,0,691,0" 
                Height="20" 
                VerticalAlignment="Center"
                />


    </Grid>
</UserControl>
